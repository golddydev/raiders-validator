#!/usr/bin/env bash

set -e

SCRIPT_PATH=$(readlink -f "$0")
SCRIPT_DIR=$(dirname "$SCRIPT_PATH")
SCRIPT=$(realpath "$SCRIPT_DIR/../raiders-valdator/src/entrypoints/cli.ts" 2>/dev/null || realpath "$SCRIPT_DIR/../src/entrypoint.ts")
TSX=$(realpath "$SCRIPT_DIR/../node_modules/.bin/tsx")

"$TSX" "$SCRIPT" "$@"
